
(require Gtk)

( (. Gtk init) )

(defn add (parent child)
    (set parent "child" child)
)

(def window (new (. Gtk Window)))

# the variable 'title' was defined in the interpreter
(set window "title" title)

(set window "default-width" 320)
(set window "default-height" 120)

(connect window "hide"
    (fn (widget)
        ( (. Gtk main-quit) )
    )
)

(def box (new (. Gtk VBox)))
(add window box)
(set box "border-width" 12)

# get-label-from-native was defined in the interpreter
(def label (get-label-from-native))
(add box label)

(def button (new (. Gtk Button)))
(add box button)
(set button "label" "Click me!")

(def entry (new (. Gtk Entry)))
(add box entry)

(def counter 0)

(connect button "clicked"
    (fn (widget)
        (set widget "label" "Thanks!")
        (set counter (+ counter 1))
        (set entry "text" counter)
        (print counter)
    )
)

( (. window show-all) )

( (. Gtk main) )

