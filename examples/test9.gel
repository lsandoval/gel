(macro method (name args & body)
    (quote name) (function args body)
)

(macro field (name value)
    (quote name) value
)

(macro get-field (attr)
    (get self (quote name))
)

(macro set-field (attr value)
    (set self (quote name) value)
)

(macro class (name args & body)
    (function name args
        (define self {})
        (append self body)
        (function (attr)
            (get self attr)
        )
    )
)


(class Person (init-name init-age)
    (field name init-name)
    (field age init-age)

    (method greet (name-of-person)
        (print "Nice to meet you" name-of-person)
        (print "I am" (get-field name))
    )

    (method set (attr value)
        (case attr
            ("age")
                (do
                    (set-field age value)
                    (print "Now I am" value "years old")
                )
            #else
                (print "I don't think you can change my" attr)
        )
    )
)


(define mary (Person "Maria Romanov" 35))

(print "My name is" (mary "name") "and I'm" (mary "age"))
( (mary "greet") "Hanna")

( (mary "set") "age" 37)
(mary "age")

( (mary "set") "name" "Boris")

